@model AdminBlog.Models.Category
<br />
<h2 class="text-info">@(Model.Id !=0 ? "Edit" : "Create") Category</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Upsert" enctype="multipart/form-data" >
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="imagePath" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name " class="text-danger" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="imagePath"></label>
            </div>
            <div class="col-6">
                <input type="file" class="form-control" name="image" />
                <span asp-validation-for="imagePath" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id ==0 ? "Create" : "Edit")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" asp-controller="Category" class="btn btn-success form-control">Back To Panel</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

